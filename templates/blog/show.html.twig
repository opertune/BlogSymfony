{% extends "base.html.twig" %}

{% block body %}
        <article>
            <h2>{{article.title}}</h2>
            <div class="metadata">Ecrit le {{ article.createAt | date('d/m/y') }} à {{ article.createAt | date('H:i') }} dans la catégorie Politique</div>
            <div class="content">
                <img src="{{ article.image }}" alt="img">
                {{ article.content | raw }}
            </div>
        </article>
{% endblock %}